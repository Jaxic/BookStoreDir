<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Simple Map Test</title>
    
    <!-- Load Leaflet CSS and JS from CDN -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div id="simple-map" style="height: 100vh; width: 100%;">
      <!-- React component will load here -->
    </div>
    
    <script>
      // Simple vanilla JS map - no React, no components, no data processing
      document.addEventListener('DOMContentLoaded', function() {
        setTimeout(() => {
          if (window.L) {
            const map = L.map('simple-map').setView([43.6532, -79.3832], 10);
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
              attribution: 'Â© OpenStreetMap contributors'
            }).addTo(map);
            
            L.marker([43.6532, -79.3832])
              .addTo(map)
              .bindPopup('Test marker - pure vanilla JS!')
              .openPopup();
          }
        }, 500);
      });
    </script>
  </body>
</html> 