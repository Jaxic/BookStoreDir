---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import DynamicHero from '../components/react/animations/DynamicHero.tsx';
import WhyChoose from '../components/react/animations/WhyChoose.tsx';
import MarqueeText from '../components/react/ui/MarqueeText.tsx';
import ScrollTriggeredStats from '../components/react/animations/ScrollTriggeredStats.tsx';
import BlogPosts from '../components/react/animations/BlogPosts.tsx';
import FAQ from '../components/react/animations/FAQ.tsx';
import CTASection from '../components/react/animations/CTASection.tsx';
import Footer from '../components/react/animations/Footer.tsx';

// Example dynamic data (replace with real data as needed)
const storeCount = 270;
const provinces = [
  { name: 'Ontario', count: 89, color: 'from-blue-500 to-purple-500' },
  { name: 'British Columbia', count: 67, color: 'from-purple-500 to-pink-500' },
  { name: 'Quebec', count: 54, color: 'from-pink-500 to-blue-500' },
  { name: 'Alberta', count: 32, color: 'from-blue-500 to-pink-500' },
  { name: 'Nova Scotia', count: 18, color: 'from-purple-500 to-blue-500' },
  { name: 'Manitoba', count: 10, color: 'from-pink-500 to-purple-500' },
];

// Dynamically fetch blog posts
const posts = (await getCollection('blog', ({ data }) =>
  import.meta.env.PROD ? data.draft !== true : true
)).sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

const blogPosts = posts.slice(0, 3).map(post => ({
  image: post.data.image?.url || '',
  date: post.data.pubDate.toLocaleDateString(undefined, { day: '2-digit', month: 'short', year: 'numeric' }).toUpperCase(),
  title: post.data.title,
  excerpt: post.data.description,
  author: post.data.author ?? 'Unknown',
  url: `/blog/${post.id}`,
}));
const faqs = [
  {
    question: 'How do I find bookstores near me?',
    answer: 'Use our search feature to find bookstores by city, province, or specialty. You can also browse by province to discover new stores in your area.',
  },
  {
    question: 'Are the store hours and information up to date?',
    answer: 'We regularly update our database, but we recommend calling ahead or checking the store\'s website to confirm current hours and availability.',
  },
  {
    question: 'Can I add my bookstore to the directory?',
    answer: 'Yes! If you own a used bookstore in Canada, contact us to have your store included in our directory. We\'re always looking to support independent bookstores.',
  },
  {
    question: 'Do you provide reviews for bookstores?',
    answer: 'We include basic information and descriptions for each bookstore. For detailed reviews, we recommend checking Google Reviews or visiting the stores\' websites.',
  },
];
const ctaButtons = [
  { label: 'Browse All Stores', href: '/stores' },
  { label: 'Find Stores Near Me', href: '', id: 'find-near-me-cta' },
];
const footerSections = [
  {
    title: 'Explore',
    links: [
      { label: 'Home', href: '/' },
      { label: 'Browse Stores', href: '/stores' },
      { label: 'Blog', href: '/blog' },
      { label: 'FAQ', href: '#faq' },
    ],
  },
  {
    title: 'Connect',
    links: [
      { label: 'Contact Us', href: 'mailto:bornagainbookscanada@gmail.com' },
      { label: 'About', href: '/about' },
      { label: 'Privacy Policy', href: '/privacy' },
    ],
  },
];
const brand = 'Born Again Books';
const description = 'Connecting book lovers with used bookstores across Canada. Supporting local businesses and fostering literary communities.';
const copyright = '© 2025 Born Again Books. All rights reserved.';
const tagline = 'Supporting used bookstores and book lovers across Canada';
---

<Layout title="Born Again Books - Discover Used Bookstores Across Canada">
  <DynamicHero client:load storeCount={storeCount} />
  <WhyChoose client:load />
  <MarqueeText client:load text="DISCOVER • EXPLORE • READ • REPEAT • DISCOVER • EXPLORE • READ • REPEAT • " />
  <ScrollTriggeredStats client:load provinces={provinces} />
  <BlogPosts client:load posts={blogPosts} />
  <FAQ client:load faqs={faqs} />
  <CTASection client:load title="Start Your Used Bookstore Adventure Today" description="Find your perfect reading spot, discover new authors, and support the literary community in your area." buttons={ctaButtons} />
  <Footer client:load brand={brand} description={description} sections={footerSections} copyright={copyright} tagline={tagline} />
</Layout>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Arial', sans-serif;
        background: #000;
        color: #fff;
        overflow-x: hidden;
        line-height: 1.6;
    }

    /* Header with Navigation */
    .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        background: rgba(0, 0, 0, 0.9);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        transform: translateY(-100%);
    }

    .nav-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .logo-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .nav-links {
        display: flex;
        gap: 2rem;
        list-style: none;
    }

    .nav-links a {
        color: #fff;
        text-decoration: none;
        transition: color 0.3s ease;
        font-weight: 500;
    }

    .nav-links a:hover {
        color: #3b82f6;
    }

    /* Hero Section */
    .hero {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), 
                    url('https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=1920&h=1080&fit=crop') center/cover;
    }

    .hero-bg {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 50% 50%, rgba(59, 130, 246, 0.2) 0%, rgba(0, 0, 0, 0.4) 70%);
        z-index: 1;
    }

    .hero-content {
        text-align: center;
        z-index: 2;
        position: relative;
        max-width: 1200px;
        padding: 0 2rem;
    }

    .hero-title {
        font-size: clamp(3rem, 10vw, 8rem);
        font-weight: 900;
        line-height: 0.9;
        margin-bottom: 2rem;
    }

    .hero-title .line {
        display: block;
        overflow: hidden;
    }

    .hero-title .word {
        display: inline-block;
        transform: translateY(100%);
    }

    .hero-subtitle {
        font-size: clamp(1.2rem, 3vw, 2rem);
        font-weight: 300;
        opacity: 0;
        transform: translateY(50px);
        margin-bottom: 2rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .hero-cta {
        opacity: 0;
        transform: translateY(30px);
    }

    .cta-button {
        background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        color: white;
        padding: 1rem 2rem;
        border: none;
        border-radius: 50px;
        font-size: 1.2rem;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.3s ease;
        margin: 0 0.5rem;
    }

    .cta-button:hover {
        transform: scale(1.05);
    }

    /* Why Choose Section */
    .why-choose {
        padding: 8rem 2rem;
        background: #111;
    }

    .section-title {
        text-align: center;
        font-size: clamp(2.5rem, 6vw, 4rem);
        font-weight: 900;
        margin-bottom: 3rem;
    }

    .why-choose-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 3rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .why-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1.5rem;
        padding: 3rem;
        text-align: center;
        transform: translateY(100px);
        opacity: 0;
    }

    .why-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 2rem;
        background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
    }

    .why-card h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        font-weight: 700;
    }

    .why-card p {
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
    }

    /* Marquee section */
    .marquee-section {
        padding: 5rem 0;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        overflow: hidden;
    }

    .marquee {
        white-space: nowrap;
        font-size: clamp(3rem, 8vw, 8rem);
        font-weight: 900;
        opacity: 0.2;
    }

    .marquee-content {
        display: inline-block;
        animation: marquee 20s linear infinite;
    }

    @keyframes marquee {
        0% { transform: translateX(0%); }
        100% { transform: translateX(-50%); }
    }

    /* Stats section */
    .stats-section {
        padding: 8rem 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .stats-title {
        text-align: center;
        font-size: clamp(3rem, 8vw, 6rem);
        font-weight: 900;
        margin-bottom: 4rem;
        line-height: 1;
    }

    .gradient-text {
        background: linear-gradient(135deg, #3b82f6, #8b5cf6, #ec4899);
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 3rem;
        margin-top: 4rem;
    }

    .stat-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1.5rem;
        padding: 3rem;
        position: relative;
        overflow: hidden;
        transform: translateY(100px);
        opacity: 0;
        text-align: center;
    }

    .stat-number {
        font-size: 4rem;
        font-weight: 900;
        background: linear-gradient(135deg, #3b82f6, #8b5cf6, #ec4899);
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stat-label {
        font-size: 1.5rem;
        margin: 1rem 0;
        font-weight: 600;
    }

    .stat-location {
        font-size: 1.1rem;
        opacity: 0.7;
    }

    /* Blog Section */
    .blog-section {
        padding: 8rem 2rem;
        background: #111;
    }

    .blog-container {
        max-width: 1400px;
        margin: 0 auto;
    }

    .blog-title {
        text-align: center;
        font-size: clamp(3rem, 8vw, 6rem);
        font-weight: 900;
        margin-bottom: 4rem;
    }

    .blog-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 3rem;
    }

    .blog-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1.5rem;
        overflow: hidden;
        transform: translateY(100px);
        opacity: 0;
        transition: all 0.3s ease;
    }

    .blog-card:hover {
        transform: translateY(-10px) scale(1.02);
        border-color: rgba(59, 130, 246, 0.5);
    }

    .blog-image {
        height: 200px;
        background-size: cover;
        background-position: center;
        position: relative;
        overflow: hidden;
    }

    .blog-date {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(0, 0, 0, 0.7);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .blog-content {
        padding: 2rem;
    }

    .blog-card-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.3;
    }

    .blog-excerpt {
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 1.5rem;
        line-height: 1.5;
    }

    .blog-author {
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
    }

    .read-more {
        color: #3b82f6;
        text-decoration: none;
        font-weight: 600;
    }

    /* FAQ Section */
    .faq-section {
        padding: 8rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .faq-title {
        text-align: center;
        font-size: clamp(3rem, 8vw, 6rem);
        font-weight: 900;
        margin-bottom: 4rem;
    }

    .faq-grid {
        display: grid;
        gap: 2rem;
    }

    .faq-item {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1rem;
        padding: 2rem;
        transform: translateY(50px);
        opacity: 0;
        transition: all 0.3s ease;
    }

    .faq-item:hover {
        border-color: rgba(59, 130, 246, 0.5);
    }

    .faq-question {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .faq-answer {
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
    }

    /* Call to Action Section */
    .cta-section {
        padding: 8rem 2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        text-align: center;
    }

    .cta-content {
        max-width: 800px;
        margin: 0 auto;
    }

    .cta-title {
        font-size: clamp(2.5rem, 6vw, 4rem);
        font-weight: 900;
        margin-bottom: 2rem;
        line-height: 1.2;
    }

    .cta-description {
        font-size: 1.3rem;
        margin-bottom: 3rem;
        opacity: 0.9;
        line-height: 1.6;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .cta-btn {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        color: white;
        padding: 1rem 2rem;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 50px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .cta-btn:hover {
        background: rgba(255, 255, 255, 0.3);
        border-color: rgba(255, 255, 255, 0.6);
        transform: translateY(-2px);
    }

    /* Footer */
    .footer {
        background: linear-gradient(135deg, #4338ca 0%, #7c3aed 100%);
        padding: 4rem 2rem 2rem;
    }

    .footer-content {
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 3rem;
        margin-bottom: 3rem;
    }

    .footer-section h3 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .footer-logo {
        font-size: 1.5rem;
    }

    .footer-description {
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
    }

    .footer-links {
        list-style: none;
    }

    .footer-links li {
        margin-bottom: 0.8rem;
    }

    .footer-links a {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-links a:hover {
        color: white;
    }

    .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        padding-top: 2rem;
        text-align: center;
        color: rgba(255, 255, 255, 0.7);
    }

    .footer-bottom p {
        margin-bottom: 0.5rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .nav-links {
            display: none;
        }
        
        .cta-buttons {
            flex-direction: column;
            align-items: center;
        }
        
        .cta-btn {
            width: 100%;
            max-width: 300px;
        }
    }

    /* Mobile adjustments */
    @media (max-width: 480px) {
        .hero-title {
            font-size: 2.5rem;
        }
        
        .section-title, .stats-title, .blog-title, .faq-title {
            font-size: 2rem;
        }
        
        .cta-title {
            font-size: 2rem;
        }
    }
</style>