---
import { parseBookstores } from '../lib/csv/parser';
import { processBookstore } from '../lib/processors/bookstore';
import type { ProcessedBookstore } from '../types/bookstore';
import StoreDiscovery from '../components/stores/StoreDiscovery';
import path from 'path';

// Load and process bookstore data
const csvPath = path.join(process.cwd(), 'src', 'data', 'bookstores.csv');
const { records } = await parseBookstores(csvPath);
const processedStores: ProcessedBookstore[] = records.map(processBookstore);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bookstore Directory</title>
    <meta name="description" content="Discover local bookstores in your area" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-gradient-to-b from-gray-50 to-white min-h-screen font-['Inter']">
    <header class="bg-white border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center">
          <h1 class="text-4xl font-bold text-gray-900 mb-2 tracking-tight">
            Bookstore Directory
          </h1>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Discover independent bookstores in your area. Support local businesses and find your next reading adventure.
          </p>
        </div>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <StoreDiscovery client:load stores={processedStores} />
    </main>

    <footer class="bg-white border-t border-gray-200 mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center">
          <p class="text-gray-500">
            Â© {new Date().getFullYear()} Bookstore Directory. All rights reserved.
          </p>
          <p class="text-gray-400 text-sm mt-2">
            Supporting local bookstores and book lovers everywhere
          </p>
        </div>
      </div>
    </footer>
  </body>
</html> 