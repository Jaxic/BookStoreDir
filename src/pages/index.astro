---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Born Again Books - Discover Used Bookstores Across Canada">
    <!-- Header Navigation -->
    <header class="header">
        <nav class="nav-container">
            <div class="logo">
                <div class="logo-icon">üìö</div>
                <span>Born Again Books</span>
            </div>
            <ul class="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#bookstores">Browse Stores</a></li>
                <li><a href="#blog">Blog</a></li>
                <li><a href="#faq">FAQ</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero" id="home">
        <div class="hero-bg"></div>
        <div class="hero-content">
            <h1 class="hero-title">
                <div class="line">
                    <span class="word">BORN</span>
                </div>
                <div class="line">
                    <span class="word gradient-text">AGAIN</span>
                </div>
                <div class="line">
                    <span class="word">BOOKS</span>
                </div>
            </h1>
            <p class="hero-subtitle">Discover 270+ independent bookstores across Canada</p>
            <div class="hero-cta">
                <button class="cta-button">Explore Bookstores</button>
                <button class="cta-button">Find Near Me</button>
            </div>
        </div>
    </section>

    <!-- Why Choose Used Bookstores -->
    <section class="why-choose">
        <h2 class="section-title">Why Choose <span class="gradient-text">Used Bookstores?</span></h2>
        <p style="text-align: center; max-width: 800px; margin: 0 auto 4rem; font-size: 1.2rem; color: rgba(255,255,255,0.8);">
            Used bookstores offer unique experiences that support local communities and foster literary culture.
        </p>
        <div class="why-choose-grid">
            <div class="why-card">
                <div class="why-icon">üèòÔ∏è</div>
                <h3>Support Local Community</h3>
                <p>Every purchase helps support local jobs, community events, and the unique character of your neighborhood.</p>
            </div>
            <div class="why-card">
                <div class="why-icon">‚ú®</div>
                <h3>Curated Selections</h3>
                <p>Discover hand-picked books, hidden gems, and personalized recommendations from passionate booksellers.</p>
            </div>
            <div class="why-card">
                <div class="why-icon">üé≠</div>
                <h3>Community Events</h3>
                <p>Enjoy author readings, book clubs, literary discussions, and other events that bring book lovers together.</p>
            </div>
        </div>
    </section>

    <!-- Marquee Section -->
    <section class="marquee-section">
        <div class="marquee">
            <div class="marquee-content">
                DISCOVER ‚Ä¢ EXPLORE ‚Ä¢ READ ‚Ä¢ REPEAT ‚Ä¢ DISCOVER ‚Ä¢ EXPLORE ‚Ä¢ READ ‚Ä¢ REPEAT ‚Ä¢ 
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section" id="bookstores">
        <h2 class="stats-title">Bookstores <span class="gradient-text">Across</span> Canada</h2>
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number">89</div>
                <div class="stat-label">Bookstores</div>
                <div class="stat-location">Ontario</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">67</div>
                <div class="stat-label">Bookstores</div>
                <div class="stat-location">British Columbia</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">54</div>
                <div class="stat-label">Bookstores</div>
                <div class="stat-location">Quebec</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">32</div>
                <div class="stat-label">Bookstores</div>
                <div class="stat-location">Alberta</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">18</div>
                <div class="stat-label">Bookstores</div>
                <div class="stat-location">Nova Scotia</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">10</div>
                <div class="stat-label">Bookstores</div>
                <div class="stat-location">Manitoba</div>
            </div>
        </div>
    </section>

    <!-- Blog Section -->
    <section class="blog-section" id="blog">
        <div class="blog-container">
            <h2 class="blog-title">Latest <span class="gradient-text">Blog</span> Posts</h2>
            <div class="blog-grid">
                <article class="blog-card">
                    <div class="blog-image" style="background-image: url('https://images.unsplash.com/photo-1481627834876-b7833e8f5570?w=400&h=300&fit=crop')">
                        <div class="blog-date">JUN 01, 2024</div>
                    </div>
                    <div class="blog-content">
                        <h3 class="blog-card-title">Book Condition Guide: Understanding Used Book Grading Systems</h3>
                        <p class="blog-excerpt">Learn how to evaluate the condition of used books and understand the standard grading systems used by bookstores across Canada.</p>
                        <div class="blog-author">
                            <span>By Nicole Dubois</span>
                            <a href="#" class="read-more">Read More ‚Üí</a>
                        </div>
                    </div>
                </article>

                <article class="blog-card">
                    <div class="blog-image" style="background-image: url('https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&h=300&fit=crop')">
                        <div class="blog-date">MAY 15, 2024</div>
                    </div>
                    <div class="blog-content">
                        <h3 class="blog-card-title">Hidden Literary Gems: Discovering Independent Bookstores</h3>
                        <p class="blog-excerpt">Explore the unique character and charm of independent bookstores, and why they're essential to Canada's literary landscape.</p>
                        <div class="blog-author">
                            <span>By Sarah Mitchell</span>
                            <a href="#" class="read-more">Read More ‚Üí</a>
                        </div>
                    </div>
                </article>

                <article class="blog-card">
                    <div class="blog-image" style="background-image: url('https://images.unsplash.com/photo-1524995997946-a1c2e315a42f?w=400&h=300&fit=crop')">
                        <div class="blog-date">APR 28, 2024</div>
                    </div>
                    <div class="blog-content">
                        <h3 class="blog-card-title">Supporting Local: The Economic Impact of Used Bookstores</h3>
                        <p class="blog-excerpt">Discover how shopping at local used bookstores contributes to community economic growth and cultural preservation.</p>
                        <div class="blog-author">
                            <span>By David Chen</span>
                            <a href="#" class="read-more">Read More ‚Üí</a>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section" id="faq">
        <h2 class="faq-title">Frequently Asked <span class="gradient-text">Questions</span></h2>
        <div class="faq-grid">
            <div class="faq-item">
                <h3 class="faq-question">How do I find bookstores near me?</h3>
                <p class="faq-answer">Use our search feature to find bookstores by city, province, or specialty. You can also browse by province to discover new stores in your area.</p>
            </div>
            <div class="faq-item">
                <h3 class="faq-question">Are the store hours and information up to date?</h3>
                <p class="faq-answer">We regularly update our database, but we recommend calling ahead or checking the store's website to confirm current hours and availability.</p>
            </div>
            <div class="faq-item">
                <h3 class="faq-question">Can I add my bookstore to the directory?</h3>
                <p class="faq-answer">Yes! If you own a used bookstore in Canada, contact us to have your store included in our directory. We're always looking to support independent bookstores.</p>
            </div>
            <div class="faq-item">
                <h3 class="faq-question">Do you provide reviews for bookstores?</h3>
                <p class="faq-answer">We include basic information and descriptions for each bookstore. For detailed reviews, we recommend checking Google Reviews or visiting the stores' websites.</p>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="cta-section">
        <div class="cta-content">
            <h2 class="cta-title">Start Your Used Bookstore Adventure Today</h2>
            <p class="cta-description">Find your perfect reading spot, discover new authors, and support the literary community in your area.</p>
            <div class="cta-buttons">
                <a href="#" class="cta-btn">Browse All Stores</a>
                <a href="#" class="cta-btn">Find Stores Near Me</a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3><span class="footer-logo">üìö</span> Born Again Books</h3>
                <p class="footer-description">
                    Connecting book lovers with used bookstores across Canada. Supporting local businesses and fostering literary communities.
                </p>
            </div>
            
            <div class="footer-section">
                <h3>Explore</h3>
                <ul class="footer-links">
                    <li><a href="#home">Home</a></li>
                    <li><a href="#bookstores">Browse Stores</a></li>
                    <li><a href="#blog">Blog</a></li>
                    <li><a href="#faq">FAQ</a></li>
                </ul>
            </div>
            
            <div class="footer-section">
                <h3>Connect</h3>
                <ul class="footer-links">
                    <li><a href="#contact">Contact Us</a></li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#privacy">Privacy Policy</a></li>
                    <li><a href="#terms">Terms of Service</a></li>
                </ul>
            </div>
        </div>
        
        <div class="footer-bottom">
            <p>&copy; 2025 Born Again Books. All rights reserved.</p>
            <p>Supporting used bookstores and book lovers across Canada</p>
        </div>
    </footer>
</Layout>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Arial', sans-serif;
        background: #000;
        color: #fff;
        overflow-x: hidden;
        line-height: 1.6;
    }

    /* Header with Navigation */
    .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        background: rgba(0, 0, 0, 0.9);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        transform: translateY(-100%);
    }

    .nav-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .logo-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .nav-links {
        display: flex;
        gap: 2rem;
        list-style: none;
    }

    .nav-links a {
        color: #fff;
        text-decoration: none;
        transition: color 0.3s ease;
        font-weight: 500;
    }

    .nav-links a:hover {
        color: #3b82f6;
    }

    /* Hero Section */
    .hero {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), 
                    url('https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=1920&h=1080&fit=crop') center/cover;
    }

    .hero-bg {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 50% 50%, rgba(59, 130, 246, 0.2) 0%, rgba(0, 0, 0, 0.4) 70%);
        z-index: 1;
    }

    .hero-content {
        text-align: center;
        z-index: 2;
        position: relative;
        max-width: 1200px;
        padding: 0 2rem;
    }

    .hero-title {
        font-size: clamp(3rem, 10vw, 8rem);
        font-weight: 900;
        line-height: 0.9;
        margin-bottom: 2rem;
    }

    .hero-title .line {
        display: block;
        overflow: hidden;
    }

    .hero-title .word {
        display: inline-block;
        transform: translateY(100%);
    }

    .hero-subtitle {
        font-size: clamp(1.2rem, 3vw, 2rem);
        font-weight: 300;
        opacity: 0;
        transform: translateY(50px);
        margin-bottom: 2rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .hero-cta {
        opacity: 0;
        transform: translateY(30px);
    }

    .cta-button {
        background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        color: white;
        padding: 1rem 2rem;
        border: none;
        border-radius: 50px;
        font-size: 1.2rem;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.3s ease;
        margin: 0 0.5rem;
    }

    .cta-button:hover {
        transform: scale(1.05);
    }

    /* Why Choose Section */
    .why-choose {
        padding: 8rem 2rem;
        background: #111;
    }

    .section-title {
        text-align: center;
        font-size: clamp(2.5rem, 6vw, 4rem);
        font-weight: 900;
        margin-bottom: 3rem;
    }

    .why-choose-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 3rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .why-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1.5rem;
        padding: 3rem;
        text-align: center;
        transform: translateY(100px);
        opacity: 0;
    }

    .why-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 2rem;
        background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
    }

    .why-card h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        font-weight: 700;
    }

    .why-card p {
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
    }

    /* Marquee section */
    .marquee-section {
        padding: 5rem 0;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        overflow: hidden;
    }

    .marquee {
        white-space: nowrap;
        font-size: clamp(3rem, 8vw, 8rem);
        font-weight: 900;
        opacity: 0.2;
    }

    .marquee-content {
        display: inline-block;
        animation: marquee 20s linear infinite;
    }

    @keyframes marquee {
        0% { transform: translateX(0%); }
        100% { transform: translateX(-50%); }
    }

    /* Stats section */
    .stats-section {
        padding: 8rem 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .stats-title {
        text-align: center;
        font-size: clamp(3rem, 8vw, 6rem);
        font-weight: 900;
        margin-bottom: 4rem;
        line-height: 1;
    }

    .gradient-text {
        background: linear-gradient(135deg, #3b82f6, #8b5cf6, #ec4899);
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 3rem;
        margin-top: 4rem;
    }

    .stat-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1.5rem;
        padding: 3rem;
        position: relative;
        overflow: hidden;
        transform: translateY(100px);
        opacity: 0;
        text-align: center;
    }

    .stat-number {
        font-size: 4rem;
        font-weight: 900;
        background: linear-gradient(135deg, #3b82f6, #8b5cf6, #ec4899);
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stat-label {
        font-size: 1.5rem;
        margin: 1rem 0;
        font-weight: 600;
    }

    .stat-location {
        font-size: 1.1rem;
        opacity: 0.7;
    }

    /* Blog Section */
    .blog-section {
        padding: 8rem 2rem;
        background: #111;
    }

    .blog-container {
        max-width: 1400px;
        margin: 0 auto;
    }

    .blog-title {
        text-align: center;
        font-size: clamp(3rem, 8vw, 6rem);
        font-weight: 900;
        margin-bottom: 4rem;
    }

    .blog-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 3rem;
    }

    .blog-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1.5rem;
        overflow: hidden;
        transform: translateY(100px);
        opacity: 0;
        transition: all 0.3s ease;
    }

    .blog-card:hover {
        transform: translateY(-10px) scale(1.02);
        border-color: rgba(59, 130, 246, 0.5);
    }

    .blog-image {
        height: 200px;
        background-size: cover;
        background-position: center;
        position: relative;
        overflow: hidden;
    }

    .blog-date {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(0, 0, 0, 0.7);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .blog-content {
        padding: 2rem;
    }

    .blog-card-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.3;
    }

    .blog-excerpt {
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 1.5rem;
        line-height: 1.5;
    }

    .blog-author {
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
    }

    .read-more {
        color: #3b82f6;
        text-decoration: none;
        font-weight: 600;
    }

    /* FAQ Section */
    .faq-section {
        padding: 8rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .faq-title {
        text-align: center;
        font-size: clamp(3rem, 8vw, 6rem);
        font-weight: 900;
        margin-bottom: 4rem;
    }

    .faq-grid {
        display: grid;
        gap: 2rem;
    }

    .faq-item {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1rem;
        padding: 2rem;
        transform: translateY(50px);
        opacity: 0;
        transition: all 0.3s ease;
    }

    .faq-item:hover {
        border-color: rgba(59, 130, 246, 0.5);
    }

    .faq-question {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .faq-answer {
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
    }

    /* Call to Action Section */
    .cta-section {
        padding: 8rem 2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        text-align: center;
    }

    .cta-content {
        max-width: 800px;
        margin: 0 auto;
    }

    .cta-title {
        font-size: clamp(2.5rem, 6vw, 4rem);
        font-weight: 900;
        margin-bottom: 2rem;
        line-height: 1.2;
    }

    .cta-description {
        font-size: 1.3rem;
        margin-bottom: 3rem;
        opacity: 0.9;
        line-height: 1.6;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .cta-btn {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        color: white;
        padding: 1rem 2rem;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 50px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .cta-btn:hover {
        background: rgba(255, 255, 255, 0.3);
        border-color: rgba(255, 255, 255, 0.6);
        transform: translateY(-2px);
    }

    /* Footer */
    .footer {
        background: linear-gradient(135deg, #4338ca 0%, #7c3aed 100%);
        padding: 4rem 2rem 2rem;
    }

    .footer-content {
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 3rem;
        margin-bottom: 3rem;
    }

    .footer-section h3 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .footer-logo {
        font-size: 1.5rem;
    }

    .footer-description {
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
    }

    .footer-links {
        list-style: none;
    }

    .footer-links li {
        margin-bottom: 0.8rem;
    }

    .footer-links a {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-links a:hover {
        color: white;
    }

    .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        padding-top: 2rem;
        text-align: center;
        color: rgba(255, 255, 255, 0.7);
    }

    .footer-bottom p {
        margin-bottom: 0.5rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .nav-links {
            display: none;
        }
        
        .cta-buttons {
            flex-direction: column;
            align-items: center;
        }
        
        .cta-btn {
            width: 100%;
            max-width: 300px;
        }
    }

    /* Mobile adjustments */
    @media (max-width: 480px) {
        .hero-title {
            font-size: 2.5rem;
        }
        
        .section-title, .stats-title, .blog-title, .faq-title {
            font-size: 2rem;
        }
        
        .cta-title {
            font-size: 2rem;
        }
    }
</style>

<script>
    // Import GSAP from CDN for now (you can install via npm later)
    const script1 = document.createElement('script');
    script1.src = 'https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js';
    document.head.appendChild(script1);

    const script2 = document.createElement('script');
    script2.src = 'https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js';
    document.head.appendChild(script2);

    const script3 = document.createElement('script');
    script3.src = 'https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/TextPlugin.min.js';
    document.head.appendChild(script3);

    // Wait for GSAP to load, then initialize animations
    script3.onload = function() {
        // Register GSAP plugins
        gsap.registerPlugin(ScrollTrigger, TextPlugin);

        // Header slide down animation
        gsap.to('.header', {
            y: 0,
            duration: 1,
            ease: 'power2.out',
            delay: 0.5
        });

        // Hero animations
        gsap.timeline()
            .from('.hero-title .word', {
                duration: 1.2,
                y: '100%',
                stagger: 0.2,
                ease: 'power4.out'
            })
            .to('.hero-subtitle', {
                duration: 1,
                opacity: 1,
                y: 0,
                ease: 'power2.out'
            }, '-=0.5')
            .to('.hero-cta', {
                duration: 0.8,
                opacity: 1,
                y: 0,
                ease: 'power2.out'
            }, '-=0.3');

        // Hero parallax
        gsap.to('.hero-bg', {
            yPercent: 50,
            scrollTrigger: {
                trigger: '.hero',
                start: 'top top',
                end: 'bottom top',
                scrub: 1
            }
        });

        // Why Choose cards animation
        gsap.fromTo('.why-card', {
            y: 100,
            opacity: 0
        }, {
            y: 0,
            opacity: 1,
            duration: 1,
            stagger: 0.2,
            ease: 'power3.out',
            scrollTrigger: {
                trigger: '.why-choose',
                start: 'top 70%',
                end: 'bottom 30%'
            }
        });

        // Stats title animation
        gsap.fromTo('.stats-title', {
            y: 50,
            opacity: 0
        }, {
            y: 0,
            opacity: 1,
            duration: 1,
            ease: 'power2.out',
            scrollTrigger: {
                trigger: '.stats-section',
                start: 'top 80%'
            }
        });

        // Stats cards animation - enhanced
        gsap.fromTo('.stat-card', {
            y: 100,
            opacity: 0,
            rotationX: 15,
            scale: 0.8
        }, {
            y: 0,
            opacity: 1,
            rotationX: 0,
            scale: 1,
            duration: 1.2,
            stagger: 0.15,
            ease: 'back.out(1.7)',
            scrollTrigger: {
                trigger: '.stats-grid',
                start: 'top 75%',
                end: 'bottom 25%',
                toggleActions: 'play none none reverse'
            }
        });

        // Number counting animation - enhanced
        document.querySelectorAll('.stat-number').forEach((el, index) => {
            const finalNumber = parseInt(el.textContent);
            
            gsap.fromTo(el, {
                textContent: 0
            }, {
                textContent: finalNumber,
                duration: 2.5,
                ease: 'power2.out',
                snap: { textContent: 1 },
                delay: index * 0.1,
                scrollTrigger: {
                    trigger: el.closest('.stat-card'),
                    start: 'top 85%',
                    toggleActions: 'play none none reverse'
                }
            });
        });

        // Blog cards animation
        gsap.fromTo('.blog-card', {
            y: 100,
            opacity: 0,
            rotationX: 15
        }, {
            y: 0,
            opacity: 1,
            rotationX: 0,
            duration: 1,
            stagger: 0.15,
            ease: 'power3.out',
            scrollTrigger: {
                trigger: '.blog-section',
                start: 'top 70%',
                end: 'bottom 30%'
            }
        });

        // FAQ items animation
        gsap.fromTo('.faq-item', {
            y: 50,
            opacity: 0
        }, {
            y: 0,
            opacity: 1,
            duration: 0.8,
            stagger: 0.1,
            ease: 'power2.out',
            scrollTrigger: {
                trigger: '.faq-section',
                start: 'top 70%'
            }
        });

        // CTA section animation
        gsap.fromTo('.cta-content', {
            y: 50,
            opacity: 0
        }, {
            y: 0,
            opacity: 1,
            duration: 1,
            ease: 'power2.out',
            scrollTrigger: {
                trigger: '.cta-section',
                start: 'top 70%'
            }
        });

        // Footer animation
        gsap.fromTo('.footer-content', {
            y: 50,
            opacity: 0
        }, {
            y: 0,
            opacity: 1,
            duration: 1,
            ease: 'power2.out',
            scrollTrigger: {
                trigger: '.footer',
                start: 'top 80%'
            }
        });

        // Smooth scroll for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Header background opacity on scroll
        window.addEventListener('scroll', () => {
            const header = document.querySelector('.header');
            const scrolled = window.scrollY;
            const opacity = Math.min(scrolled / 100, 0.95);
            header.style.background = `rgba(0, 0, 0, ${opacity})`;
        });
    };
</script>