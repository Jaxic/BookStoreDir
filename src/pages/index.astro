---
import { parseBookstores } from '../lib/csv/parser';
import { processBookstore } from '../lib/processors/bookstore';
import type { ProcessedBookstore } from '../types/bookstore';
import StoreMapFixed from '../components/map/StoreMapFixed';
import Navigation from '../components/Navigation.astro';
import path from 'path';

// Load and process bookstore data
const csvPath = path.join(process.cwd(), 'src', 'data', 'bookstores.csv');
const { records } = await parseBookstores(csvPath);
const processedStores: ProcessedBookstore[] = records.map(processBookstore);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BookDir - Discover Independent Bookstores Across Canada</title>
    <meta name="description" content="Find and discover {processedStores.length} independent bookstores across Canada. Interactive map, detailed store information, and easy navigation to support local businesses." />
    <meta name="keywords" content="bookstores, independent bookstores, local bookstores, books, reading, literature, Canada, bookstore map" />
    
    <!-- Accessibility and SEO meta tags -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="BookDir" />
    <link rel="canonical" href="/" />
    
    <!-- Open Graph meta tags -->
    <meta property="og:title" content="BookDir - Discover Independent Bookstores Across Canada" />
    <meta property="og:description" content="Find and discover {processedStores.length} independent bookstores across Canada with our interactive map and detailed store information." />
    <meta property="og:type" content="website" />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Tailwind CSS is handled by Astro integration, no CDN needed -->
  </head>
  <body class="bg-gray-50 min-h-screen font-['Inter']">
    <!-- Skip to main content link -->
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-blue-600 text-white px-4 py-2 rounded-md z-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
    >
      Skip to main content
    </a>

    <!-- Navigation -->
    <Navigation currentPage="home" />

    <!-- Hero Section -->
    <header class="bg-gradient-to-r from-blue-600 to-indigo-700 text-white" role="banner">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
        <div class="text-center">
          <!-- Logo/Brand -->
          <div class="flex justify-center items-center mb-6">
            <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-full p-4">
              <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
          </div>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6 tracking-tight">
            Discover Canada's 
            <span class="block text-yellow-300">Independent Bookstores</span>
          </h1>
          
          <p class="text-xl sm:text-2xl text-blue-100 max-w-3xl mx-auto mb-8 leading-relaxed">
            Explore {processedStores.length} unique bookstores across Canada. Find local gems, support independent businesses, and discover your next reading adventure.
          </p>
          
          <!-- Quick Stats -->
          <div class="flex flex-wrap justify-center gap-6 sm:gap-8 mb-10">
            <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-lg px-6 py-4">
              <div class="text-2xl sm:text-3xl font-bold text-yellow-300">{processedStores.length}</div>
              <div class="text-sm text-blue-100">Bookstores</div>
            </div>
            <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-lg px-6 py-4">
              <div class="text-2xl sm:text-3xl font-bold text-yellow-300">13</div>
              <div class="text-sm text-blue-100">Provinces & Territories</div>
            </div>
            <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-lg px-6 py-4">
              <div class="text-2xl sm:text-3xl font-bold text-yellow-300">100%</div>
              <div class="text-sm text-blue-100">Independent</div>
            </div>
          </div>
          
          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a 
              href="#map-section" 
              class="inline-flex items-center px-8 py-3 bg-yellow-400 hover:bg-yellow-300 text-gray-900 font-semibold rounded-full transition-colors shadow-lg focus:outline-none focus:ring-2 focus:ring-yellow-300 focus:ring-offset-2 focus:ring-offset-blue-600"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              Explore the Map
            </a>
            <a 
              href="/stores" 
              class="inline-flex items-center px-8 py-3 bg-transparent hover:bg-white hover:bg-opacity-10 text-white font-semibold rounded-full border-2 border-white transition-colors focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-blue-600"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
              </svg>
              Browse All Stores
            </a>
          </div>
        </div>
      </div>
      
      <!-- Decorative wave -->
      <div class="relative">
        <svg class="absolute bottom-0 w-full h-6 text-gray-50" fill="currentColor" viewBox="0 0 1000 100" preserveAspectRatio="none">
          <path d="M0,100 C150,0 350,0 500,50 C650,100 850,100 1000,0 L1000,100 Z"></path>
        </svg>
      </div>
    </header>

    <main id="main-content">
      <!-- Map Section -->
      <section id="map-section" class="py-12 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <!-- Section Header -->
          <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Interactive Bookstore Map</h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
              Discover bookstores near you with our interactive map. Click on markers to view store details, get directions, and find contact information.
            </p>
          </div>
          
          <!-- Map Container -->
          <div class="bg-white rounded-lg shadow-lg border border-gray-200 overflow-hidden">
            <!-- Map Info Bar -->
            <div class="bg-blue-50 border-b border-blue-200 px-6 py-4">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                      <span class="text-blue-600 font-semibold">{processedStores.length}</span>
                    </div>
                  </div>
                  <div class="ml-4">
                    <p class="text-sm font-medium text-blue-900">
                      Showing {processedStores.length} bookstores across Canada
                    </p>
                    <p class="text-xs text-blue-700">
                      Click markers for store details • Use controls to navigate • Enable location for nearby stores
                    </p>
                  </div>
                </div>
                <div class="mt-3 sm:mt-0">
                  <a 
                    href="/stores" 
                    class="inline-flex items-center px-4 py-2 border border-blue-300 shadow-sm text-sm leading-4 font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
                  >
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                    </svg>
                    View All Stores
                  </a>
                </div>
              </div>
            </div>
            
            <!-- Map -->
            <div class="h-[600px] sm:h-[700px] lg:h-[800px] w-full">
              <StoreMapFixed client:only="react" stores={processedStores} height="100%" />
            </div>
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Why Choose Independent Bookstores?</h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
              Independent bookstores offer unique experiences that support local communities and foster literary culture.
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Feature 1 -->
            <div class="text-center p-6">
              <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Support Local Community</h3>
              <p class="text-gray-600">
                Every purchase helps support local jobs, community events, and the unique character of your neighborhood.
              </p>
            </div>
            
            <!-- Feature 2 -->
            <div class="text-center p-6">
              <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Curated Selections</h3>
              <p class="text-gray-600">
                Discover hand-picked books, hidden gems, and personalized recommendations from passionate booksellers.
              </p>
            </div>
            
            <!-- Feature 3 -->
            <div class="text-center p-6">
              <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Community Events</h3>
              <p class="text-gray-600">
                Enjoy author readings, book clubs, literary discussions, and other events that bring book lovers together.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Call to Action -->
      <section class="py-16 bg-gradient-to-r from-blue-600 to-indigo-700 text-white">
        <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
          <h2 class="text-3xl font-bold mb-4">Start Your Bookstore Adventure Today</h2>
          <p class="text-xl text-blue-100 mb-8">
            Find your perfect reading spot, discover new authors, and support the literary community in your area.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="#map-section" 
              class="inline-flex items-center px-8 py-3 bg-yellow-400 hover:bg-yellow-300 text-gray-900 font-semibold rounded-full transition-colors shadow-lg focus:outline-none focus:ring-2 focus:ring-yellow-300 focus:ring-offset-2 focus:ring-offset-blue-600"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              Find Stores Near Me
            </a>
            <a 
              href="/stores" 
              class="inline-flex items-center px-8 py-3 bg-transparent hover:bg-white hover:bg-opacity-10 text-white font-semibold rounded-full border-2 border-white transition-colors focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-blue-600"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              Browse All Stores
            </a>
          </div>
        </div>
      </section>
    </main>

    <footer class="bg-gray-900 text-white" role="contentinfo">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <!-- Brand -->
          <div class="col-span-1 md:col-span-2">
            <div class="flex items-center mb-4">
              <svg class="w-8 h-8 text-blue-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
              <h3 class="text-xl font-bold">BookDir</h3>
            </div>
            <p class="text-gray-300 mb-4 max-w-md">
              Connecting book lovers with independent bookstores across Canada. Supporting local businesses and fostering literary communities.
            </p>
          </div>
          
          <!-- Quick Links -->
          <div>
            <h4 class="text-lg font-semibold mb-4">Explore</h4>
            <ul class="space-y-2">
              <li><a href="/" class="text-gray-300 hover:text-white transition-colors">Home</a></li>
              <li><a href="/stores" class="text-gray-300 hover:text-white transition-colors">Browse Stores</a></li>
              <li><a href="#map-section" class="text-gray-300 hover:text-white transition-colors">Interactive Map</a></li>
            </ul>
          </div>
          
          <!-- Contact -->
          <div>
            <h4 class="text-lg font-semibold mb-4">Connect</h4>
            <ul class="space-y-2">
              <li><a href="mailto:hello@bookdir.ca" class="text-gray-300 hover:text-white transition-colors">Contact Us</a></li>
              <li><a href="/about" class="text-gray-300 hover:text-white transition-colors">About</a></li>
            </ul>
          </div>
        </div>
        
        <div class="border-t border-gray-800 mt-8 pt-8 text-center">
          <p class="text-gray-400">
            © {new Date().getFullYear()} BookDir. All rights reserved.
          </p>
          <p class="text-gray-500 text-sm mt-2">
            Supporting independent bookstores and book lovers across Canada
          </p>
        </div>
      </div>
    </footer>

    <!-- Smooth scrolling for anchor links -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
              target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
              });
            }
          });
        });
      });
    </script>
  </body>
</html> 