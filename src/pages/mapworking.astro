---
import WorkingMap from '../components/map/WorkingMap';

// Just a few test stores
const testStores = [
  {
    name: 'Toronto Bookstore',
    city: 'Toronto',
    province: 'ON',
    lat: '43.6532',
    lng: '-79.3832'
  },
  {
    name: 'Vancouver Bookstore',
    city: 'Vancouver', 
    province: 'BC',
    lat: '49.2827',
    lng: '-123.1207'
  }
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Working Map Test</title>
    
    <!-- Load Leaflet CSS and JS from CDN -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="h-screen">
    <WorkingMap client:only="react" stores={testStores} />
  </body>
</html> 