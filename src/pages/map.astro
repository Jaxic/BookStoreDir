---
import { parseBookstores } from '../lib/csv/parser';
import { processBookstore } from '../lib/processors/bookstore';
import type { ProcessedBookstore } from '../types/bookstore';
import StoreMapView from '../components/stores/StoreMapView';
import path from 'path';

// Load and process bookstore data
const csvPath = path.join(process.cwd(), 'src', 'data', 'bookstores.csv');
const { records } = await parseBookstores(csvPath);
const stores: ProcessedBookstore[] = records.map(processBookstore);
console.log(`Loaded ${stores.length} stores for main map`);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bookstore Map - Find Bookstores Near You</title>
    
    <!-- Load Leaflet CSS and JS from CDN -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="h-screen overflow-hidden">
    <main class="h-full">
      <StoreMapView client:only="react" stores={stores} />
    </main>
  </body>
</html>

<style>
  /* Ensure full height layout */
  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
  }
  
  /* Custom map styles */
  :global(.leaflet-popup-content-wrapper) {
    border-radius: 8px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
  
  :global(.leaflet-popup-tip) {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  
  :global(.bookstore-marker:hover) {
    transform: scale(1.1);
  }
  
  :global(.leaflet-control-zoom) {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
  
  :global(.leaflet-control-zoom a) {
    color: #374151;
    font-weight: 600;
  }
  
  :global(.leaflet-control-zoom a:hover) {
    background-color: #f3f4f6;
  }
</style> 