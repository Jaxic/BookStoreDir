    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="h-screen">
    <div class="h-full flex flex-col">
      <div class="bg-blue-600 text-white p-4 text-center">
        <h1 class="text-xl font-bold">Fast Map Test - 3 Bookstores</h1>
        <p class="text-sm">Testing with minimal data</p>
      </div>
      <div class="flex-1">
        <StoreMap 
          client:only="react" 
          stores={testStores}
          height="100%"
          className="w-full h-full"
        />
      </div>
    </div>
  </body>
</html> 