---
import '../styles/global.css';
import Footer from '../components/react/animations/Footer.tsx';
interface Props {
  title: string;
}

const { title } = Astro.props;
import Navigation from '../components/Navigation.astro';

// Footer props (defaults)
const brand = 'Born Again Books';
const description = 'Connecting book lovers with used bookstores across Canada. Supporting local businesses and fostering literary communities.';
const footerSections = [
  {
    title: 'Explore',
    links: [
      { label: 'Home', href: '/' },
      { label: 'Browse Stores', href: '/stores' },
      { label: 'Blog', href: '/blog' },
      { label: 'FAQ', href: '#faq' },
    ],
  },
  {
    title: 'Connect',
    links: [
      { label: 'Contact Us', href: 'mailto:bornagainbookscanada@gmail.com' },
      { label: 'About', href: '/about' },
      { label: 'Privacy Policy', href: '/privacy' },
    ],
  },
];
const copyright = 'Â© 2025 Born Again Books. All rights reserved.';
const tagline = 'Supporting used bookstores and book lovers across Canada';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Find local bookstores across Canada">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-gray-50 font-inter">
    <Navigation />
    <slot />
    <Footer brand={brand} description={description} sections={footerSections} copyright={copyright} tagline={tagline} />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', system-ui, sans-serif;
  }
</style> 